    <script src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.20/require.min.js" data-main="@Url.Content("~/Content/scripts/main.js")"></script>
    <script>
        require.config({
            baseUrl: '@Url.Content("~/Content/scripts")',
            @if (Request.IsLocal)
            { <text>urlArgs: "bust=" + (new Date()).getTime(),</text> }
            paths: {
                'jquery': 'vendor/jquery-3.4.1.min',
                'jquery-validate': 'vendor/jquery.validate.min',
                'ajax': 'modules/ajax',
                'swal': "https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.0.18/sweetalert2.all.min",
                'bootstrap': 'vendor/bootstrap',
               // 'cookies': 'modules/cookies',
               // 'mask': 'vendor/jquery.mask.min'
               // 'jquery-ui': 'https://code.jquery.com/ui/1.11.4/jquery-ui.min',
                'toastr': 'https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.2/toastr.min',
               // 'handlebars4': 'https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.1.0/handlebars.min',
            },
            shim: {
                'bootstrap': {
                    deps: ["jquery"]
                }
                //,'jquery-nicescroll': {
                //    deps: ['jquery']
                //},
            }
        });

    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

</head>
